#include <iostream>
using namespace std;

// Character structure
struct Character {
    string name;
    int x, y; // Position on a 2D grid
};

// Function to display the character's position
void displayPosition(const Character& character) {
    cout << character.name << " is at position (" << character.x << ", " << character.y << ")." << endl;
}

// Main function
int main() {
    // Create a character
    Character player = {"Hero", 0, 0};

    cout << "=== Simple Character Controller ===" << endl;
    displayPosition(player);

    char input;
    bool running = true;

    while (running) {
        cout << "\nMove your character (W/A/S/D to move, Q to quit): ";
        cin >> input;

        switch (tolower(input)) {
            case 'w': // Move up
                player.y++;
                break;
            case 'a': // Move left
                player.x--;
                break;
            case 's': // Move down
                player.y--;
                break;
            case 'd': // Move right
                player.x++;
                break;
            case 'q': // Quit
                cout << "Exiting the game. Goodbye!" << endl;
                running = false;
                continue;
            default:
                cout << "Invalid input. Use W/A/S/D to move or Q to quit." << endl;
                continue;
        }

        // Display the updated position
        displayPosition(player);
    }

    return 0;
}
